<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marksbackground"
    android:orientation="vertical"
    tools:context=".adminmarkingportal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="305dp"
                android:layout_height="227dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttonallignment"
                android:src="@drawable/marksportallogo"></ImageView>

            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >



                <Button
                    android:id="@+id/button1"
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/marksbuttoncustomized"
                    android:text="@string/add_marks" />

                <Button
                    android:id="@+id/buton3"
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/marksbuttoncustomized"
                    android:text="@string/list_marks" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="35dp"
                    android:text="@string/back"
                    android:background="@drawable/backbutton"/>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>