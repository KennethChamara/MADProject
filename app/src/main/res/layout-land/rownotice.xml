<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@drawable/noticelistbg">

        <TextView
            android:id="@+id/ndis"
            android:layout_width="529dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rownotice_date"
            android:layout_below="@+id/user_notice_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/notice_disply_img"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_notice_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/notice_disply_img"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/darkGray"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notice_disply_img"
            android:layout_width="131dp"
            android:layout_height="126dp"
            android:layout_above="@+id/rownotice_postby"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/listeview_image" />

        <TextView
            android:id="@+id/rownotice_postby"
            android:layout_width="130dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rownotice_date"
            android:layout_width="127dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="12sp" />

    </RelativeLayout>




</LinearLayout>